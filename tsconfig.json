{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "ESNext",
    "module": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    // "noEmit": true,
    // "types": ["jest"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "jsx": "react",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js"]
}
